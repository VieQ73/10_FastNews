<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RecyclerView cho Navbar (Danh mục tin tức) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/navbarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/nav_items_layout"/> <!-- Để preview các item trong design view -->

    <!-- Placeholder cho nội dung tin tức (sẽ được thay thế bằng RecyclerView hoặc ViewPager) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung tin tức sẽ được hiển thị ở đây..."
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#eee"/>

</LinearLayout>