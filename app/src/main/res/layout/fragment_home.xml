<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shimmer loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <!-- Placeholder shimmer danh mục + bài viết -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@android:color/darker_gray"/>
                <View android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginTop="8dp" android:background="@android:color/darker_gray"/>
                <View android:layout_width="match_parent" android:layout_height="300dp" android:layout_marginTop="8dp" android:background="@android:color/darker_gray"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Danh mục tin tức -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/categoryScroll">

            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Category buttons sẽ được thêm động -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Tin tức nổi bật -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/highlightViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Danh sách tin tức -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

        <!-- Không có dữ liệu -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_no_data"
                android:contentDescription="Không có dữ liệu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không có tin tức"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
