<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/goBackFromDetails"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/shareNewsCV"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/watchLater"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/share_icon" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/watchLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:drawableEnd="@drawable/watch_later"
            android:drawableTint="#FFFFFF"
            android:text="Xem sau"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Nội dung có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgOfNews1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_banner_new"
                />

        <TextView
            android:id="@+id/newsSource1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="Nguồn"
            android:textColor="#717171"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/newsTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newsTimeAgo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="15 phút trước"
            android:textColor="#009688"
            android:textSize="18dp"
            android:drawableLeft="@drawable/watch_later"
            android:drawableTint="#009688"/>

        <TextView
            android:id="@+id/newsContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nội dung rất dài...\n\n(Thêm nhiều dòng để có thể cuộn)\n\nBạn có thể cuộn lên xuống.\n\nKhi kéo xuống từ đỉnh, nó sẽ đóng lại."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/learnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm hiểu thêm"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#009688"
            android:drawableRight="@drawable/next_icon"
            android:drawableTint="#FFFFFF"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
