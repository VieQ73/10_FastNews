<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom layer: Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="@color/black"/> <!-- Border color -->
            <corners android:radius="8dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Top layer: Default spinner background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
            <corners android:radius="8dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
